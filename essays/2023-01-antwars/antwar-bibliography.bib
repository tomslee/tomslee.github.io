@article{sano_pavement_2018,
	title = {Pavement {Ant} {Workers} ({Tetramorium} caespitum) {Assess} {Cues} {Coded} in {Cuticular} {Hydrocarbons} to {Recognize} {Conspecific} and {Heterospecific} {Non}-{Nestmate} {Ants}},
