	keywords = {interspecific competition, community structure, dominance hierarchy, field experiment, Formica aquilonia},
	pages = {548--557},
	file = {Full Text PDF:C\:\\Users\\sleet\\Zotero\\storage\\9BXSPZS5\\Gibb and Johansson - 2011 - Field tests of interspecific competition in ant as.pdf:application/pdf;Snapshot:C\:\\Users\\sleet\\Zotero\\storage\\EXAKN8XN\\j.1365-2656.2010.01794.html:text/html},
