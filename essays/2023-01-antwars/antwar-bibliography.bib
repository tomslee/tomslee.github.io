	author = {Pérez-Lachaud, Gabriela and Rocha, Franklin H. and Valle-Mora, Javier and Hénaut, Yann and Lachaud, Jean-Paul},
	month = jan,
	year = {2019},
	note = {Publisher: Public Library of Science},
	keywords = {Animal behavior, Animal sociality, Ants, Filter paper, Larvae, Nesting habits, Social systems, Weevils},
	pages = {e0210739},
	file = {Full Text PDF:C\:\\Users\\sleet\\Zotero\\storage\\CSIF3K5I\\Pérez-Lachaud et al. - 2019 - Fine-tuned intruder discrimination favors ant para.pdf:application/pdf;Snapshot:C\:\\Users\\sleet\\Zotero\\storage\\JGXQ4URY\\article.html:text/html},
