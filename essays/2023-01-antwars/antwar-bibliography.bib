@article{scharf_differential_2011,
	title = {Differential {Response} of {Ant} {Colonies} to {Intruders}: {Attack} {Strategies} {Correlate} {With} {Potential} {Threat}: {Aggressive} {Response} of a {Cavity} {Dwelling} {Ant}},
